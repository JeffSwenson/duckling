include ../mixins/coupled_form_groups

block drawable_label

div
    label Inactive? &nbsp;
    input(type="checkbox" rv-checked="data.inactive")
br

label Render Priority
div
    input.form-control(type="text" placeholder="Render Priority" rv-value="data.renderPriority")
br

label Rotation
div
    input.form-control(type="text" placeholder="Rotation" rv-value="data.rotation")
br

label Position Offset
+x_y_control("Position Offset X", "Position Offset Y", "data.positionOffset.x", "data.positionOffset.y")
br

label Scale
+x_y_control("Scale X", "Scale Y", "data.scale.x", "data.scale.y")
br

