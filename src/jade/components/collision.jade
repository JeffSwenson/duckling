include ../mixins/select_control

form
    label Collision Type
    div
        +select(this.id('collisionPicker'))
    br

    label Body Type
    div
        +select(this.id('bodyPicker'))
    br

    label Collision Dimensions
    div.form-group
        div.input-group
            div.input-group-addon.width-height-input-group Width
            input.form-control(type="text" placeholder="Collision Width" rv-value="data.info.dimension.x")
        div.input-group
            div.input-group-addon.width-height-input-group Height
            input.form-control(type="text" placeholder="Collision Height" rv-value="data.info.dimension.y")
