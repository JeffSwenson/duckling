{
  "name": "@ild-games/duckling",
  "repository": {
    "type": "git",
    "url": "https://github.com/ild-games/duckling"
  },
  "version": "0.0.1",
  "scripts": {
    "start": "npm run build && concurrently \"npm run watch\" \"npm run duckling\" ",
    "test": "tsc && npm run mocha",
    "build": "gulp && tsc",
    "watch": "concurrently \"npm run gulp:w\" \"npm run tsc:w\"",
    "gulp": "gulp",
    "gulp:w": "gulp watch",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "mocha": "electron-mocha --renderer \"build/duckling-tests/**/*.spec.js\"",
    "mocha-debug": "electron-mocha --interactive \"build/duckling-tests/**/*.spec.js\"",
    "duckling": "electron build/electron/background-main.js",
    "format": "npm run format:ts && npm run format:scss",
    "format:ts": "prettier --parser typescript --config ./package.json --write \"src/**/*.ts\"",
    "format:scss": "prettier --parser scss --config ./package.json --write \"src/**/*.scss\""
  },
  "license": "ISC",
  "dependencies": {
    "@angular/animations": "5.2.10",
    "@angular/cdk": "5.2.5",
    "@angular/common": "5.2.10",
    "@angular/compiler": "5.2.10",
    "@angular/core": "5.2.10",
    "@angular/forms": "5.2.10",
    "@angular/http": "5.2.10",
    "@angular/material": "5.2.5",
    "@angular/platform-browser": "5.2.10",
    "@angular/platform-browser-dynamic": "5.2.10",
    "@angular/upgrade": "5.2.10",
    "@types/glob": "5.0.35",
    "@types/hammerjs": "2.0.35",
    "@types/howler": "2.0.5",
    "@types/lodash": "4.14.108",
    "@types/mathjs": "3.20.0",
    "@types/node": "8.0.53",
    "@types/pixi.js": "4.7.3",
    "@types/webfontloader": "1.6.29",
    "es6-shim": "0.35.3",
    "font-awesome": "4.7.0",
    "glob": "7.1.2",
    "gulp": "3.9.1",
    "gulp-sass": "4.0.1",
    "gulp-watch": "5.0.0",
    "howler": "2.0.9",
    "immutable": "3.8.2",
    "lodash": "4.17.10",
    "mathjs": "4.1.2",
    "open-iconic": "1.1.1",
    "pixi.js": "4.7.3",
    "redux": "4.0.0",
    "reflect-metadata": "0.1.12",
    "rxjs": "5.5.0",
    "systemjs": "0.21.3",
    "webfontloader": "1.6.28",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@types/chai": "4.1.3",
    "@types/chai-spies": "0.0.0",
    "@types/mocha": "5.2.0",
    "chai": "4.1.2",
    "chai-spies": "1.0.0",
    "concurrently": "3.5.1",
    "electron": "1.8.6",
    "electron-mocha": "6.0.2",
    "mocha": "5.1.1",
    "prettier": "1.13.7",
    "typescript": "2.8.3"
  },
  "prettier": {
    "tabWidth": 4,
    "trailingComma": "es5",
    "arrowParens": "always"
  }
}
